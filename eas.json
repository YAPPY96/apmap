{
  "cli": {
    "version": ">= 16.17.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "cache": {
          "clear": true
        }
      }
    },
    "production": {
      "android": {
        "buildType": "apk",
        "cache": {
          "clear": true
        },
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=4096"
        }
      }
    }
  },
  "submit": {
    "production": {}
  }
}

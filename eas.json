{
  "cli": {
    "version": ">= 16.17.4",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
          "autoIncrement": true, // buildNumberを自動インクリメント
          "ios": {
            "simulator": false // 実機/ストア提出用のビルドを指示
          }

        },
    "production-apk": {
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      }
    },
    "production-aab": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
